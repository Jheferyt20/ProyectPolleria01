<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris">



    <View
        android:id="@+id/notif"
        android:layout_width="wrap_content"
        android:layout_height="210dp"
        android:background="@color/app"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="239dp"
        android:layout_height="25dp"
        android:gravity="center"
        android:layout_marginTop="-150dp"
        android:text="Mostrito"
        android:textColor="@color/gris"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/notif"
        app:layout_constraintEnd_toEndOf="@+id/notif"
        app:layout_constraintStart_toStartOf="@+id/notif"
        app:layout_constraintTop_toTopOf="@+id/notif"
        app:layout_constraintVertical_bias="0.661" />


    <TextView
        android:layout_width="239dp"
        android:layout_height="33dp"
        android:layout_marginTop="-130dp"
        android:gravity="center"
        android:text="Â¡Acabas de agregar!"
        android:textColor="@color/gris"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/notif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/notif"
        app:layout_constraintTop_toTopOf="@+id/notif"
        app:layout_constraintVertical_bias="0.523" />

    <Button
        android:layout_width="150dp"
        android:layout_height="36dp"
        android:background="@drawable/btn_design1"
        android:gravity="center"
        android:text="Seguir comprando"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/notif"
        app:layout_constraintEnd_toEndOf="@+id/notif"
        app:layout_constraintHorizontal_bias="0.112"
        app:layout_constraintStart_toStartOf="@+id/notif"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.46"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:layout_width="150dp"
        android:layout_height="36dp"
        android:background="@drawable/btn_ver_carrito"
        android:gravity="center"
        android:text="Ver Carrito"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/notif"
        app:layout_constraintEnd_toEndOf="@+id/notif"
        app:layout_constraintHorizontal_bias="0.898"
        app:layout_constraintStart_toStartOf="@+id/notif"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.46"
        tools:ignore="TouchTargetSizeCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>