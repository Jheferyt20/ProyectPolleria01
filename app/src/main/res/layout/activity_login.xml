<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logoi"
    android:orientation="vertical"
    tools:context=".Activity_login">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="391dp"
        android:layout_height="68dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo"
        android:layout_marginTop="100dp" />


    <EditText
        android:id="@+id/txt_correo"
        android:layout_width="330dp"
        android:layout_height="53dp"
        android:background="@drawable/txt_design"
        android:drawableLeft="@drawable/custom_correo"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:drawablePadding="11dp"
        android:inputType="textEmailAddress"
        android:paddingStart="18dp"
        android:hint="Correo"

        android:textColorHint="@color/grismore" />

    <EditText
        android:id="@+id/txt_contra"
        android:layout_width="330dp"
        android:layout_height="53dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/txt_design"
        android:drawableLeft="@drawable/custom_contra"
        android:drawablePadding="10dp"
        android:inputType="textPassword"
        android:paddingStart="21dp"
        android:hint="Contraseña"
        android:textColorHint="@color/grismore" />


    <Button
        android:id="@+id/btn_login"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:background="@drawable/btn_design"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="Iniciar Sesión"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="50dp" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="━━━━━━   Iniciar sesión con   ━━━━━━"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:textColor="@color/gris3"
        android:textSize="20dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        app:cardCornerRadius="75dp"
        app:cardBackgroundColor="@color/gris">

    <Button
        android:id="@+id/btnGoogle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ic_google"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:scaleType="centerInside"
        android:padding="14dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"/>
</androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/btn_register"
        android:layout_width="293dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:background="@drawable/btn_trans_full"
        android:gravity="center"
        android:text="¿Aun no tienes una cuenta?\nRegistrate aquí"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold|italic" />

</LinearLayout>