<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_login">



    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/logoi"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="391dp"
        android:layout_height="68dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.191" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="260dp"
        android:layout_height="45dp"
        android:background="@drawable/btn_design"
        android:layout_marginTop="-45dp"
        android:gravity="center"
        android:text="Iniciar Sesión"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_contra"
        app:layout_constraintVertical_bias="0.455" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="293dp"
        android:layout_height="45dp"
        android:background="@drawable/btn_trans_full"
        android:gravity="center"
        android:text="¿Aun no tienes una cuenta?\nRegistrate aquí"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_login"
        app:layout_constraintVertical_bias="0.169" />

    <EditText
        android:id="@+id/txt_correo"
        android:layout_width="330dp"
        android:layout_height="53dp"
        android:background="@drawable/txt_design"
        android:drawableLeft="@drawable/custom_correo"
        android:layout_marginTop="20dp"
        android:drawablePadding="11dp"
        android:inputType="textEmailAddress"
        android:paddingStart="18dp"
        android:hint="Correo"
        android:textColorHint="@color/grismore"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.389" />

    <EditText
        android:id="@+id/txt_contra"
        android:layout_width="330dp"
        android:layout_height="53dp"
        android:background="@drawable/txt_design"
        android:drawableLeft="@drawable/custom_contra"
        android:drawablePadding="10dp"
        android:inputType="textPassword"
        android:paddingStart="21dp"
        android:hint="Contraseña"
        android:textColorHint="@color/grismore"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_correo"
        app:layout_constraintVertical_bias="0.112" />

</androidx.constraintlayout.widget.ConstraintLayout>