<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gris">

    <Button
        android:id="@+id/btn_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/atras"
        android:paddingStart="10dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerCarrito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="96dp" />



    <TextView
        android:id="@+id/textView2"
        android:layout_width="239dp"
        android:layout_height="25dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Tu carrito está vacio."
        android:textColor="@color/grismore"
        android:textSize="21sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="239dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="¡Sigue comprando!"
        android:textColor="@color/grismore"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:src="@drawable/carritouno"/>


    <Button
        android:layout_width="140dp"
        android:layout_height="42dp"
        android:background="@drawable/btn_design"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Comprar"
        android:id="@+id/btnIraComprar"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:background="@drawable/btn_design"
        android:drawableLeft="@drawable/btn_ir_pagar"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:text="Ir a pagar"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />



</LinearLayout>