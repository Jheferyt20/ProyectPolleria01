<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris"
    android:orientation="vertical">



    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/atras"
        android:layout_marginTop="20dp"
        android:paddingStart="10dp"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/combos"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-condensed"
            android:text="Combo mega familiar"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginTop="10dp"
            android:text="1 pollo entero, medio pollo, 2 porciones de papas, ensalada y cremas."
            android:textSize="24dp"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="sans-serif-condensed"
            android:layout_marginTop="-6dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/app"
            android:text="S/79.90"
            android:textSize="45sp" />

        <ImageView
            android:id="@+id/favorito_agregar"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="9dp"
            android:src="@drawable/favoritos_btn" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="92dp"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="420dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/fondo_descrip" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="-55dp"
        android:gravity="center">

        <Button
            android:id="@+id/agregar_producto"
            android:layout_width="125dp"
            android:layout_height="35dp"
            android:textAllCaps="false"
            android:background="@drawable/btn_design1"
            android:layout_marginStart="30dp"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="Agregar" />


        <Button
            android:id="@+id/aumentar"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginStart="40dp"
            android:textStyle="bold"
            android:textSize="18dp"
            android:background="@drawable/btn_design1"
            android:text="+" />


        <TextView
            android:id="@+id/cantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginStart="20dp"
            android:text="1" />


        <Button
            android:id="@+id/disminuir"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/btn_design1"
            android:textStyle="bold"
            android:textSize="18dp"
            android:text="-" />

    </LinearLayout>


</LinearLayout>