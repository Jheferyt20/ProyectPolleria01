<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris"
    tools:context=".ui.ordena.Ordena_aqui"
    android:orientation="vertical">




    <ImageView
        android:id="@+id/atras"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/atras"
        android:layout_marginTop="24dp"
        android:paddingStart="10dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/OrdenaAqui"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:paddingStart="65dp"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:text="        Ordena Aqui"
        android:textColor="@color/app"
        android:textSize="35sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-5dp"
        tools:layout_editor_absoluteY="0dp" />

    <View
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:layout_marginEnd="16dp"
        android:background="@color/grismore"
        app:layout_constraintBottom_toTopOf="@+id/delivery"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.578"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OrdenaAqui"
        app:layout_constraintVertical_bias="0.205"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/delivery"
        android:layout_width="340dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_design"
        android:drawableStart="@drawable/custom_delivery"
        android:drawablePadding="16dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:paddingEnd="9dp"
        android:text="Delivery"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OrdenaAqui" />

    <Button
        android:id="@+id/tienda"
        android:layout_width="340dp"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_design"
        android:drawableStart="@drawable/custom_tienda"
        android:drawablePadding="16dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:paddingEnd="9dp"
        android:text="Recojo en Tienda"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="28dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delivery"
        app:layout_constraintVertical_bias="0.033" />









</androidx.constraintlayout.widget.ConstraintLayout>
