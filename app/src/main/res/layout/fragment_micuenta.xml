<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.micuenta.MicuentaFragment"
    android:background="@color/gris">


    <Button
        android:id="@+id/button4"
        android:layout_width="350dp"
        android:layout_height="58dp"
        android:background="@drawable/btn_trans"
        android:drawableStart="@drawable/custom_user"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:text="Mi Información"
        android:textColor="@color/red"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.059" />


    <Button
        android:id="@+id/button3"
        android:layout_width="350dp"
        android:layout_height="58dp"
        android:background="@drawable/btn_trans"
        android:drawableStart="@drawable/custom_polit"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:text="Politica de la Empleada"
        android:textColor="@color/red"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.202" />

    <Button
        android:id="@+id/button2"
        android:layout_width="350dp"
        android:layout_height="58dp"
        android:background="@drawable/btn_trans"
        android:drawableStart="@drawable/custom_libro"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:text="Libro de Reclamaciones"
        android:textColor="@color/red"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.344" />

    <Button
        android:layout_width="250dp"
        android:layout_height="47dp"
        android:background="@drawable/btn_design"
        android:drawableStart="@drawable/custom_cerrar"
        android:gravity="center"
        android:paddingStart="40dp"
        android:paddingEnd="51dp"
        android:text="Cerrar Sesión"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.846" />


</androidx.constraintlayout.widget.ConstraintLayout>