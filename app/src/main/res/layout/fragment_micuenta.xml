<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.micuenta.MicuentaFragment"
    android:background="@color/gris">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:verticalScrollbarPosition="defaultPosition"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="-8dp"
                android:src="@drawable/miinfo"/>

            <TextView
                android:id="@+id/usuario"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_marginTop="-7dp"
                android:background="@drawable/btn_trans"
                android:drawableLeft="@drawable/custom_usuario"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:hint="Usuario"
                android:paddingStart="12dp"
                android:textColorHint="@color/grismore"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nombres"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_trans"
                android:drawableLeft="@drawable/custom_usuario"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:hint="Nombres"
                android:paddingStart="12dp"
                android:textColorHint="@color/grismore"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/apellidos"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_trans"
                android:drawableLeft="@drawable/custom_usuario"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:hint="Apellidos"
                android:paddingStart="12dp"
                android:textColorHint="@color/grismore"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nombres" />
            <TextView
                android:id="@+id/telefono"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_trans"
                android:drawableLeft="@drawable/custom_telf"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:hint="Teléfono"
                android:paddingStart="12dp"
                android:textColorHint="@color/grismore"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.508"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/apellidos" />
            <TextView
                android:id="@+id/correo"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_trans"
                android:drawableLeft="@drawable/custom_correo"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:hint="Correo"
                android:paddingStart="12dp"
                android:textColorHint="@color/grismore"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.508"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/telefono" />
            <TextView
                android:id="@+id/direccion"
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_trans"
                android:drawableLeft="@drawable/custom_direc"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:hint="Direccion"
                android:paddingStart="12dp"
                android:textColorHint="@color/grismore"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.508"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/correo" />


            <Button
                android:id="@+id/btn_editar"
                android:layout_width="230dp"
                android:layout_height="35dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/btn_design"
                android:drawableLeft="@drawable/custom_edit_info"
                android:drawablePadding="10dp"
                android:paddingStart="63dp"
                android:gravity="center_vertical"
                android:text="Editar"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="18sp"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/btn_politica"
                android:layout_width="230dp"
                android:layout_height="45dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/btn_design"
                android:drawableLeft="@drawable/custom_polit"
                android:drawablePadding="6dp"
                android:paddingStart="11dp"
                android:gravity="center_vertical"
                android:text="Política de la empresa"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="18sp"
                tools:ignore="TouchTargetSizeCheck" />

            <Button
                android:id="@+id/btn_cerrarSesion"
                android:layout_width="230dp"
                android:layout_height="38dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/btn_design"
                android:drawableLeft="@drawable/custom_cerrar"
                android:drawablePadding="5dp"
                android:paddingStart="40dp"
                android:gravity="center_vertical"
                android:text="Cerrar Sesión"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="18sp"
                tools:ignore="TouchTargetSizeCheck" />

            <androidx.cardview.widget.CardView
                android:id="@+id/selectedContactCardView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="19dp"
                android:layout_marginEnd="24dp"
                android:visibility="gone"
                app:cardBackgroundColor="#C5CAE9"
                app:cardCornerRadius="8dp"
                app:cardElevation="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_editar"
                android:layout_marginBottom="50dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:background="@color/gris">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:text="EDITAR INFORMACIÓN"
                            android:layout_gravity="center"
                            android:textColor="@color/app"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/editUsuario"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="8dp"
                            android:drawableLeft="@drawable/custom_usuario"
                            android:drawablePadding="8dp"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:hint="Usuario" />

                        <EditText
                            android:id="@+id/editNombre"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="8dp"
                            android:drawableLeft="@drawable/custom_usuario"
                            android:drawablePadding="8dp"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:hint="Nombres" />

                        <EditText
                            android:id="@+id/editApellido"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="8dp"
                            android:drawableLeft="@drawable/custom_usuario"
                            android:drawablePadding="8dp"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:hint="Apellidos" />

                        <EditText
                            android:id="@+id/editTelefono"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="8dp"
                            android:drawableLeft="@drawable/custom_telf"
                            android:drawablePadding="8dp"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:ems="10"
                            android:inputType="phone"
                            android:hint="Telefono" />

                        <EditText
                            android:id="@+id/editDireccion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="8dp"
                            android:drawableLeft="@drawable/custom_direc"
                            android:drawablePadding="8dp"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:hint="Direccion" />

                        <Button
                            android:id="@+id/btn_guardar"
                            android:layout_width="160dp"
                            android:layout_height="35dp"
                            android:layout_marginTop="7dp"
                            android:text="Guardar"
                            android:background="@drawable/btn_design"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:layout_gravity="center"
                            android:textAllCaps="false" />
                        <Button
                            android:id="@+id/btn_cancelar"
                            android:layout_width="160dp"
                            android:layout_height="35dp"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/btn_design"
                            android:textColor="@color/white"
                            android:text="Cancelar"
                            android:textSize="18sp"
                            android:layout_gravity="center"
                            android:textAllCaps="false"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </androidx.appcompat.widget.LinearLayoutCompat>



    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>