<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.micuenta.MicuentaFragment"
    android:background="@color/gris">

    <EditText
        android:id="@+id/usuario"
        android:layout_width="350dp"
        android:layout_height="58dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/btn_trans"
        android:drawableLeft="@drawable/custom_usuario"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:hint="Usuario"
        android:paddingStart="12dp"
        android:textColorHint="@color/grismore"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/nombres"
        android:layout_width="350dp"
        android:layout_height="58dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_trans"
        android:drawableLeft="@drawable/custom_usuario"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:hint="Nombres"
        android:paddingStart="12dp"
        android:textColorHint="@color/grismore"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usuario" />

    <EditText
        android:id="@+id/apellidos"
        android:layout_width="350dp"
        android:layout_height="58dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_trans"
        android:drawableLeft="@drawable/custom_usuario"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:hint="Apellidos"
        android:paddingStart="12dp"
        android:textColorHint="@color/grismore"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombres" />


    <EditText
        android:id="@+id/telefono"
        android:layout_width="350dp"
        android:layout_height="58dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_trans"
        android:drawableLeft="@drawable/custom_telf"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:hint="Teléfono"
        android:paddingStart="12dp"
        android:textColorHint="@color/grismore"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/apellidos" />

    <EditText
        android:id="@+id/correo"
        android:layout_width="350dp"
        android:layout_height="58dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_trans"
        android:drawableLeft="@drawable/custom_correo"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:hint="Correo"
        android:paddingStart="12dp"
        android:textColorHint="@color/grismore"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/telefono" />

    <EditText
        android:id="@+id/direccion"
        android:layout_width="350dp"
        android:layout_height="58dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_trans"
        android:drawableLeft="@drawable/custom_direc"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:hint="Direccion"
        android:paddingStart="12dp"
        android:textColorHint="@color/grismore"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/correo" />

    <Button
        android:id="@+id/btn_cerrarSesion"
        android:layout_width="250dp"
        android:layout_height="47dp"
        android:background="@drawable/btn_design"
        android:drawableStart="@drawable/custom_cerrar"
        android:gravity="center"
        android:paddingStart="40dp"
        android:paddingEnd="51dp"
        android:text="Cerrar Sesión"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.846" />


</androidx.constraintlayout.widget.ConstraintLayout>