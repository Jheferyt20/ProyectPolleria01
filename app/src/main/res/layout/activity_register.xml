<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/logoi"
    tools:context=".Activity_register">


    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/atras"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="20dp"
        android:paddingStart="10dp"
        android:layout_marginLeft="10dp"/>





    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="391dp"
        android:layout_height="68dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo" />


    <EditText
        android:id="@+id/usuario"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/borde"
        android:drawableLeft="@drawable/custom_usuario"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:hint="Usuario"
        android:paddingStart="12dp"
        android:textColorHint="@color/grismore"
        android:textStyle="bold" />



    <EditText
        android:id="@+id/nombres"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/borde"
        android:drawableLeft="@drawable/custom_usuario"
        android:drawablePadding="10dp"
        android:layout_gravity="center_horizontal"
        android:hint="Nombres"
        android:paddingStart="12dp"
        android:textColorHint="@color/grismore"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/apellidos"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/borde"
        android:drawableLeft="@drawable/custom_usuario"
        android:drawablePadding="10dp"
        android:layout_gravity="center_horizontal"
        android:hint="Apellidos"
        android:paddingStart="12dp"
        android:textColorHint="@color/grismore"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtTelefono"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/borde"
        android:drawableLeft="@drawable/custom_telf"
        android:drawablePadding="10dp"
        android:layout_gravity="center_horizontal"
        android:hint="TelÃ©fono"
        android:paddingStart="12dp"
        android:textColorHint="@color/grismore"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/correo"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/borde"
        android:drawableLeft="@drawable/custom_correo"
        android:drawablePadding="10dp"
        android:layout_gravity="center_horizontal"
        android:hint="Correo"
        android:paddingStart="12dp"
        android:textColorHint="@color/grismore"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/direccion"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/borde"
        android:drawableLeft="@drawable/custom_direc"
        android:drawablePadding="10dp"
        android:layout_gravity="center_horizontal"
        android:hint="Direccion"
        android:paddingStart="12dp"
        android:textColorHint="@color/grismore"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_auntentication"
        android:layout_width="240dp"
        android:layout_height="45dp"
        android:background="@drawable/btn_design"
        android:layout_marginTop="30dp"
        android:text="Registrar"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>