<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/item_carrito"
    android:background="@color/gris">

    <androidx.cardview.widget.CardView
        android:layout_width="370dp"
        android:layout_height="135dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="17dp">

            <ImageView
                android:id="@+id/img_carrito_com"
                android:layout_width="99dp"
                android:layout_height="75dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/combos" />

            <TextView
                android:id="@+id/txt_nomPlatoCant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/img_carrito_com"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/img_carrito_com"
                android:fontFamily="sans-serif-smallcaps"
                android:text="1 x Combo Mega Familiar"
                android:textSize="17sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/txt_precio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_nomPlatoCant"
                android:layout_marginStart="18dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="-26dp"
                android:layout_toEndOf="@id/img_carrito_com"
                android:fontFamily="sans-serif-smallcaps"
                android:text="S/89.00"
                android:textSize="17sp" />


            <TextView
                android:id="@+id/txtTituloPrecio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Monto total:"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtPrecio_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="245dp"
                android:layout_marginTop="75dp"
                android:layout_marginEnd="15dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="S/89.90"
                android:textSize="18sp" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>